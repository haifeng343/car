@import '../../assets/styles/font.wxss';

:host {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.container {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
}

.tab-item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100rpx;
  color: #1d1d1d;
  font-weight: 500;
  position: relative;
}

.tab-item.tab-sort-item {
  width: 40rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: 4rpx;
  right: 16rpx;
}

.tab-item .tab-title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}

.tab-item .uniE951 {
  font-size: 16rpx;
  position: absolute;
  right: 0;
  top: 50%;
}

.tab-item.active {
  color: #0050fe;
}

.toppanel-container {
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 333;
}

.sort-panel {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.sort-list {
  display: flex;
  flex-direction: column;
}

.sort-list .sort-item {
  height: 92rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 60rpx;
  position: relative;
}

.sort-list .sort-item.active {
  background-color: #f9f9f9;
  color: #0050fe;
}

.sort-list .sort-item .uniE930 {
  position: absolute;
  font-size: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  right: 40rpx;
}

.price-panel {
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-direction: column;
}

.price-panel .content-wrapper {
  position: relative;
  padding-bottom: 120rpx;
}

.price-range-wrapper {
  width: 720rpx;
  height: 120rpx;
  left: 24rpx;
  position: absolute;
  bottom: 64rpx;
}

.price-title text {
  white-space: nowrap;
}

.price-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #1d1d1d;
  font-weight: 500;
  margin: 60rpx;
}

.price-title image {
  width: 22rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.price-title .unit {
  font-size: 24rpx;
  color: #4a4a4a;
  margin-left: 12rpx;
  font-weight: 400;
}

.price-title .tag {
  margin-left: auto;
  color: #0050fe;
  font-size: 28rpx;
}

.price-panel .button-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 40rpx;
}

.price-panel .button-wrapper .button {
  background-color: #0050fe;
  box-shadow: 0 4rpx 6rpx 0 #0069aa;
  width: 480rpx;
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 46rpx;
}
