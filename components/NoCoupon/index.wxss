:host {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.container .img {
  width: 86%;
  margin: 0 auto;
}
.container .desc {
  color: #1d1d1d;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
}
.container .highlight {
  color: #10bcae;
}
.container .rec {
  margin: 92rpx 20rpx 52rpx 20rpx;
}
