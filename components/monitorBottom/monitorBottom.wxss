@import '../../assets/styles/font.wxss';
.monit_start{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  background: #FFFFFF;
  border-top: 1px solid #E8E8E8;
  line-height: 128rpx;
  z-index: 22;
  font-size: 28rpx;
}
.monit_start view{margin: 0 28rpx;}
.monit_start .time_line{margin-right: 8rpx}
.monit_start .price{color: #FF6363}
.monit_start .t_text{margin-right: 24rpx;}
.monit_start .monit_btn{
  width: 240rpx;
  height: 92rpx;
  background:rgba(0,80,254,1);
  box-shadow:2px 2px 4px 0px rgba(0,116,188,1);
  display: inline-block;
  color: #FFFFFF;
  border-radius: 46rpx;
  line-height: 92rpx;
  text-align: center;
  position: absolute;
  right: 28rpx;
  top:50%;
  margin-top: -46rpx;
  font-size: 28rpx;
  padding: 0
}
.monit_save .monit_btn{
  width: 324rpx;
  right: 38rpx;
}
.monit_save .monit_back{
  width: 324rpx;
  background: #FFFFFF;
  color: #0050FE;
  border: 1px solid #0050FE;
  left: 38rpx;
  box-shadow: none;
  box-sizing: border-box
}
.monit_save .monit_update{box-shadow: none;}

.monit_select{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  background: #FFFFFF;
  border-top: 1px solid #E8E8E8;
  line-height: 128rpx;
  z-index: 22
}
.monit_select .select{
  padding-left: 100rpx
}
.monit_select .select text{
  margin-top: 4rpx;
  display: inline-block
}
.monit_select .monit_cancel{
  width:240rpx;
  height:92rpx;
  background:rgba(0,80,254,1);
  box-shadow:2px 2px 4px 0px rgba(0,116,188,1);
  display: inline-block;
  color: #FFFFFF;
  border-radius:46rpx;
  line-height: 92rpx;
  text-align: center;
  position: absolute;
  right: 28rpx;
  top:50%;
  margin-top: -46rpx;
  font-size: 28rpx;
  padding: 0
}
.monit_select .uniE930 {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  line-height: 44rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid rgba(0,80,254);
  border-radius: 8rpx;
  position: absolute;
  left: 28rpx;
  top:50%;
  margin-top: -20rpx;
}

.monit_select .active{
  color: #FFFFFF;
  background-color: rgba(0,80,254);
  border:none;
  width: 42rpx;
  height: 42rpx;
}