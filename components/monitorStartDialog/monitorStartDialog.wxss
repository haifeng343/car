@import "/app.wxss";
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  z-index: 100
}
.mask_content{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 386rpx;
  overflow: hidden;
}

.mask_content .house_image .image{
  width: 76rpx;
  height: 80rpx;
}
.mask_content .content{
  width: 624rpx;
  height: 256rpx;
  background: #FFFFFF;
  border-radius:  0 0 16rpx 16rpx;
}

.mask_content .content .text{
  text-align: center;
  font-size: 32rpx;
  height: 150rpx;
  color: #1D1D1D;
  line-height: 150rpx;
}
.content .btn{
  display: flex;
  height: 106rpx;
  line-height: 106rpx;
}
.content .btn text{
  flex: 1;
  text-align: center;
  border-top: 1rpx solid #F2E9E6;
  height: 106rpx;
  box-sizing: border-box;
  line-height: 106rpx;
  color: #1D1D1D;
  font-weight: bold
}
.content .btn .right{
  color: #F1612A;
  border-left: 1rpx solid #F2E9E6;
}
