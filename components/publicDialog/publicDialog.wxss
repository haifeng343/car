@import "/app.wxss";
@import '../../assets/styles/font.wxss';
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 101
}
.mask_content{
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.mask_content .house_image .image{
  width: 84rpx;
  height: 74rpx;
  margin-top: 26rpx;
}
.mask_content .content{
  width: 624rpx;
  background: #FFFFFF;
  border-radius:  0 0 16rpx 16rpx;
  padding-bottom: 28rpx;
}
.mask_content .content .title{
  color: #1D1D1D;
  font-size: 32rpx;
  text-align: center;
  padding-top: 30rpx
}
.mask_content .content .text{
  padding-top: 8rpx;
  margin: 0 50rpx;
  text-indent: 28rpx;
  font-size: 28rpx;
  color: #BEC3CD
}
.mask_content .content .ding{color: #1D1D1D}
.mask_content .content .btn{
  width: 272rpx;
  height: 92rpx;
  background:rgba(0,80,254,1);
  box-shadow:4rpx 4rpx 8rpx 0 rgba(0,116,188,1);
  color: #FFFFFF;
  margin: 52rpx auto 0;
  border-radius: 46rpx;
  text-align: center;
  line-height: 92rpx;
  padding: 0;
  font-size: 28rpx;
}
.mask_colse{
  display: flex;
  justify-content: center;
  text-align: center;
  margin-top: 34rpx;
}
.mask_colse .icon{
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
  margin: 0 28rpx;
  font-size: 50rpx;
  color: #fff;
}
