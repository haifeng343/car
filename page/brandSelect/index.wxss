page {
  height: 100%;
  width: 100%;
}

.page {
  height: 100%;
  width: calc(100% + 40rpx);
}

.page.hidden {
  opacity: 0;
}

.hot-view {
  margin-right: 40rpx;
}

.line {
  height: 2rpx;
  width: 100%;
  background-color: #e8e8e8;
}

.hot-title {
  display: flex;
  height: 108rpx;
  align-items: center;
  font-weight: 500;
  color: #1d1d1d;
  font-size: 32rpx;
}

.hot-title .title_icon_img {
  width: 22rpx;
  height: 28rpx;
  margin-right: 10rpx;
  margin-left: 32rpx;
}

.hot-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 12rpx 40rpx;
  margin-right: -60rpx;
  margin-bottom: -12rpx;
}

.hot-list .hot-item {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  margin-right: 60rpx;
}

.hot-list .hot-item .hot-logo {
  height: 80rpx;
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hot-list .hot-item .hot-logo image {
  height: 60rpx;
  width: 60rpx;
}

.hot-list .hot-item .hot-name {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 24rpx;
  color: #1d1d1d;
  font-weight: 400;
  text-align: center;
  height: 36rpx;
  line-height: 36rpx;
}

.block {
  height: 16rpx;
  background-color: #f9f9f9;
  margin-left: 32rpx;
  margin-right: 100rpx;
  margin-top: 28rpx;
}

.all-brand {
  height: 92rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #1d1d1d;
  font-size: 28rpx;
  font-weight: 400;
  box-sizing: border-box;
  padding-left: 48rpx;
  margin-right: 40rpx;
}

.brand-pinyin-list {
  margin-right: 100rpx;
}

.brand-pinyin-item {
}

.brand-pinyin-title {
  height: 48rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #bec3cd;
  box-sizing: border-box;
  width: 100%;
  padding-left: 32rpx;
  background-color: #f9f9f9;
}

.brand-list {
  margin-left: 32rpx;
}

.brand-item {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #1d1d1d;
  border-bottom: solid 2rpx #e8e8e8;
}

.brand-item.active {
  background-color: #f3f3f3;
}

.brand-item:last-child {
  border-bottom: none;
}

.brand-logo {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 40rpx;
}

.brand-logo image {
  width: 60rpx;
  height: 60rpx;
}

.right-panel {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 380rpx;
  z-index: 33;
  background-color: #ffffff;
  box-shadow: 0 4rpx 8rpx 0 rgba(170, 170, 170, 0.5);
  transform: translateX(0);
  transition: transform 0.2s linear;
}

.right-panel.hidden {
  transform: translateX(calc(100% + 40rpx));
}

.right-panel .brand-info {
  height: 128rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.right-panel .brand-info .brand-info-icon {
  height: 80rpx;
  width: 80rpx;
  margin-left: 32rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right-panel .brand-info .brand-info-icon image {
  width: 60rpx;
  height: 60rpx;
}

.right-panel .brand-info .brand-info-name {
  font-size: 28rpx;
  color: #1d1d1d;
  font-weight: 400;
}

.right-panel .right-panel-block {
  height: 28rpx;
  width: 100%;
  background-color: #f9f9f9;
}

.right-panel .series-list {
  height: calc(100% - 156rpx);
  width: calc(100% + 40rpx);
}
.right-panel .series-back {
  height: calc(100% - 80rpx);
  width: 100%;
}

.right-panel .series-list .series-item {
  height: 80rpx;
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 24rpx;
  color: #1d1d1d;
  box-sizing: border-box;
  padding-left: 40rpx;
  border-bottom: solid 2rpx #e8e8e8;
  margin-right: 40rpx;
  background: white;
}

.right-panel .series-list .series-item.active {
  color: #0050fe;
}

.right-panel .series-list .series-item-absolute {
  background-color: #f3f3f3;
}

.index-list {
  position: fixed;
  width: 60rpx;
  right: 0;
  top: 320rpx;
  text-align: center;
  font-size: 20rpx;
  color: #1d1d1d;
}

.index-list .index-item {
  padding: 4rpx 0;
}
