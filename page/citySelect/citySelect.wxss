@import '../../assets/styles/font.wxss';
@import '../../assets/styles/flex.wxss';

.page {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.index-list {
    position: fixed;
    display: flex;
    flex-direction: column;
    right: 0;
    z-index: 9;
    top: 170rpx;
    height: calc(100% - 190rpx);
    justify-content: space-around;
}

.index-list .index-item {
    font-size: 24rpx;
    font-weight: 400;
    color: #bec3cd;
    height: 40rpx;
    line-height: 40rpx;
    flex: 0 0 auto;
    padding: 0 20rpx;
    text-align: center;
}

.header {
    width: 100%;
    height: 180rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.header .header_text {
    width: 100%;
    height: 56rpx;
    background:rgba(0,80,254,0.14);
    text-align: center;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(0,80,254,1);
    line-height: 56rpx;
}

.header .search-bar-wrapper {
    height: 68rpx;
    border-radius: 34rpx;
    width: 690rpx;
    background-color: #f9f9f9;
    margin: 30rpx auto 40rpx;
}

.header .search-bar-wrapper .placeholder {
    font-size: 24rpx;
    color: #bebebe;
}

.header .search-bar-wrapper .uniE908 {
    color: #9b9b9b;
    font-size: 28rpx;
    margin-left: 40rpx;
    margin-right: 16rpx;
}

.header .tab-wrapper {
    width: 60%;
    margin: 0 auto 20rpx auto;
}

.city-list {
    box-sizing: border-box;
    flex: 1;
    overflow: scroll;
    display: flex;
    flex-direction: column;
    /* height: calc(100% - 220rpx); */
}

.city-list .section {
    background-color: #fff;
    padding: 0 40rpx;
    float: 0;
    height: auto;
}

.city-list .section .hot-city {
    padding: 20rpx 0;
}

.city-list .section .title {
    width: 100%;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 22rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.city-list .section .title.position-title {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(190,195,205,1);
}

.city-list .section .title_icon_img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
}

.city-list .section .position {
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
}

.city-list .section .position .pos,
.city-list .section .position .repos {
    color: #0050FE;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
}
.city-list .section .position .repos{
    margin-right: 38rpx;
    width: 50%;
    box-sizing: border-box;
    text-align: right;
}

.city-list .section .position .pos {
    width: 50%;
    box-sizing: border-box;
}

.city-list .section .position .icon-font {
    font-weight: bold;
    margin-right: 10rpx;
}

.section .cell-list {
    flex-wrap: wrap;
    padding-left: 13px;
    max-height: 99px;
    overflow: hidden;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}

.cell-list .cell-item {
    width: 140rpx;
    text-align: center;
    height: 27px;
    line-height: 27px;
    border-radius: 27px;
    background-color: #f9f9f9;
    font-size: 12px;
    color: #171717;
    font-weight: 400;
    margin-bottom: 6px;
    margin-right: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.city-item .title {
    background-color: #f9f9f9;
    width: 100%;
    display: flex;
    height: 48rpx;
    align-items: center;
    padding-left: 32rpx;
    font-size: 28rpx;
    color: #bec3cd;
    box-sizing: border-box;
}

.city-item .content {
    background-color: #fff;
}

.city-item .content .city {
    box-sizing: border-box;
    height: 80rpx;
    display: flex;
    align-items: center;
    margin: 0 28rpx;
    padding-left: 52rpx;
    font-size: 32rpx;
    color: #171717;
}

.city-item .content .city+.city {
    border-top: solid 2rpx rgba(232,232,232,0.5);
}
