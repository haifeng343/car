page {
  width: 100%;
  height: 100%;
}

.left-panel {
  height: 100%;
  width: 230rpx;
  background-color: #f9f9f9;
  position: absolute;
  top: 0;
  left: 0;
}

.left-panel .index-list {
  width: 100%;
  height: 100%;
}

.left-panel .index-list .index-item {
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 64rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #1d1d1d;
}

.left-panel .index-list .index-item.active {
  background-color: #fff;
  color: #0050fe;
}

.right-panel {
  height: 100%;
  width: calc(100% + 40rpx);
  padding-left: 260rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.right-panel .filter-list {
  margin-right: 60rpx;
}

.right-panel .filter-list .filter-item {
  margin-bottom: 40rpx;
}

.right-panel .filter-list .filter-item .filter-title text {
  white-space: nowrap;
}

.right-panel .filter-list .filter-item .filter-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #1d1d1d;
  font-weight: 500;
}

.right-panel .filter-list .filter-item .filter-title image {
  width: 22rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.right-panel .filter-list .filter-title .unit {
  font-size: 24rpx;
  color: #4a4a4a;
  margin-left: 12rpx;
  font-weight: 400;
}

.right-panel .filter-list .filter-item .filter-title .tag {
  margin-left: auto;
  color: #0050fe;
  font-size: 28rpx;
}

.right-panel .filter-list .filter-item .option-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.right-panel .filter-list .filter-item .option-type-1 {
  margin-right: -40rpx;
  margin-bottom: -24rpx;
  margin-top: 20rpx;
}

.right-panel .filter-list .filter-item .option-type-1 .option-item {
  margin-right: 28rpx;
  margin-bottom: 24rpx;
  width: 140rpx;
  height: 44rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #1d1d1d;
  background-color: #f0f0f0;
  position: relative;
  box-sizing: border-box;
}

.right-panel .filter-list .filter-item .option-type-1 .option-item.active {
  background-color: #0050fe;
  color: #fff;
}

.right-panel .filter-list .filter-item .option-type-1 .option-item .icon {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  background:rgba(0,0,0,1);
}

.right-panel .filter-list .filter-item .option-type-2 {
  margin-right: -20rpx;
  margin-bottom: -20rpx;
  margin-top: 20rpx;
}

.right-panel .filter-list .filter-item .option-type-2 .option-item {
  height: 120rpx;
  width: 210rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  color: #1d1d1d;
}

.right-panel .filter-list .filter-item .option-type-2 .option-item.active {
  background-color: #d9e5ff;
  color: #0050fe;
}

.right-panel .filter-list .filter-item .option-type-2 .option-item .icon image {
  width: 140rpx;
  height: 64rpx;
}

.right-panel .filter-list .filter-item .option-type-2 .option-item .name {
  font-size: 28rpx;
  font-weight: 400;
}

.right-panel .filter-list .filter-item .option-type-3 {
  height: 100rpx;
  margin-top: 32rpx;
  position: relative;
}

.right-panel .filter-list .filter-item .option-type-3 .range-wrapper {
  position: absolute;
  top: -48rpx;
  left: -12rpx;
  width: calc(100% + 22rpx);
}

.right-panel .filter-list .filter-item .option-type-4 {
  margin-right: -40rpx;
  margin-bottom: -24rpx;
  margin-top: 20rpx;
}

.right-panel .filter-list .filter-item .option-type-4 .option-item {
  margin-right: 28rpx;
  margin-bottom: 24rpx;
  width: 226rpx;
  height: 44rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #1d1d1d;
  background-color: #f0f0f0;
}

.right-panel .filter-list .filter-item .option-type-4 .option-item.active {
  background-color: #0050fe;
  color: #fff;
}

.button-wrapper {
  position: fixed;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-sizing: border-box;
  border-top: solid 2rpx #f4efef;
  z-index: 999;
}

.button-wrapper .button {
  width: 270rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  box-sizing: border-box;
  border: solid 2rpx #0050fe;
}

.button-wrapper .button.reset-button {
  background-color: #fff;
  color: #0050fe;
}

.button-wrapper .button.submit-button {
  color: #fff;
  background-color: #0050fe;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
